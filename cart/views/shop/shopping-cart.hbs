{{# if products }}
<div class="flex-row justify-content-center">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group d-flex">
            {{# each products }}
            <li class="list-group-item d-flex justify-content-center">
                <span class="badge d-flex">{{ this.qty }}</span>
                <strong>{{ this.item.title }}</strong>
                <span class="label label-success d-flex">${{ this.price }}</span>
                <div class="btn-group d-flex">
                    <button class="btn btn-primary btn-xs dropdown-toggle d-flex" type="button" data-toggle="dropdown">Action
                        <span class="caret d-flex"></span></button>
                        <ul class="dropdown-menu d-flex">
                            <li><a href="/reduce/{{ this.item._id }}">Remove One</a></li>
                            <li><a href="/remove-item/{{ this.item._id }}">Remove All</a></li>
                        </ul>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total: ${{ totalPrice }} </strong>
    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <a href="/checkout" class="btn btn-success" type="button">Checkout</a>
    </div>
</div>

{{ else }}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>No items in cart</h2>
    </div>
</div>
{{/if}}