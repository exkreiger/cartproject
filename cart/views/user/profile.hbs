<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User Profile</h1>
        <hr>
        <h2>My Orders</h2>
        {{# each orders }}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-groupd">
                        {{# each this.items }}
                        <li class="list-group-item align-center">                            
                            {{ this.item.title }} | <span><span class="badge">${{ this.price }}</span>  Per Unit</span> | <span>x  <span class="badge">{{ this.qty }}</span></span>
                        </li>                        
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer">Order Total: <strong>${{ this.cart.totalPrice }}</strong></div>
         </div>
        {{/each}}
    </div>
</div>



